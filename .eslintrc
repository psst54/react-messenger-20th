{
  "extends": [
    "prettier",
    "airbnb",
    "airbnb/hooks",
    "plugin:prettier/recommended",
    "plugin:react/jsx-runtime",
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
      },
    ],
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"], // 사용할 확장자 추가
      },
      "typescript": {}, // TypeScript 모듈 경로 설정과 연동
    },
  },
}
